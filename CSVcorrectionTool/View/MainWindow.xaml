<Window
    x:Class="CSVcorrectionTool.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CSVcorrectionTool"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:CSVcorrectionTool.View"
    xmlns:viewmodels="clr-namespace:CSVcorrectionTool.ViewModels"
    Title="CSV 보정 도구"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
    mc:Ignorable="d">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid
            Grid.Row="1"
            Width="NaN"
            Height="NaN"
            Margin="0,0,0,0">
            <Rectangle />
            <Button
                Width="90"
                Height="30"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Command="{Binding OpenFileCommand}"
                Content="파일열기" />

            <Button
                Width="90"
                Height="30"
                Margin="0,50,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Command="{Binding SaveFileCommand}"
                Content="저장하기" />
            <StackPanel
                Height="50"
                VerticalAlignment="Center"
                d:LayoutOverrides="Width">
                <Label
                    Width="70"
                    Height="20"
                    Padding="0,0,0,0"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    Content="X"
                    FontSize="15"
                    Foreground="Green"
                    d:LayoutOverrides="LeftPosition, RightPosition" />
                <TextBox
                    x:Name="xDegreeTextBox"
                    Width="70"
                    Height="30"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="#FFD0FFD0"
                    FontSize="17"
                    FontWeight="Bold"
                    Text="{Binding XDegree, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel
                Height="50"
                Margin="0,150,0,0"
                VerticalAlignment="Center"
                d:LayoutOverrides="Width">
                <Label
                    Width="70"
                    Height="20"
                    Padding="0,0,0,0"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    Content="Y"
                    FontSize="15"
                    Foreground="Green"
                    d:LayoutOverrides="LeftPosition, RightPosition" />
                <TextBox
                    x:Name="yDegreeTextBox"
                    Width="70"
                    Height="30"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="#FFD0FFD0"
                    FontSize="17"
                    FontWeight="Bold"
                    Text="{Binding YDegree, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel
                Height="50"
                VerticalAlignment="Bottom"
                d:LayoutOverrides="Width">
                <TextBox
                    x:Name="zDegreeTextBox"
                    Width="70"
                    Height="30"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="#FFD0FFD0"
                    FontSize="17"
                    FontWeight="Bold"
                    Text="{Binding ZDegree, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap" />
                <Label
                    Width="70"
                    Height="20"
                    Padding="0,0,0,0"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    Content="Z"
                    FontSize="15"
                    Foreground="Green"
                    d:LayoutOverrides="LeftPosition, RightPosition" />
            </StackPanel>
            <Button
                Width="90"
                Height="30"
                Margin="0,120,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Command="{Binding ConvertCommand}"
                Content="보정하기" />

        </Grid>
        <Grid
            x:Name="view3D"
            Grid.Row="1"
            Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*" />
                <ColumnDefinition Width="13*" />
            </Grid.ColumnDefinitions>
            <view:ViewPort3DView Grid.ColumnSpan="2" Points="{Binding Points}" />
        </Grid>
    </Grid>
</Window>
