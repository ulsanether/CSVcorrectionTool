<UserControl
    x:Class="CSVcorrectionTool.View.ViewPort3DView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CSVcorrectionTool.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Viewport3D x:Name="viewport" ClipToBounds="True">
            <!--  카메라 설정  -->
            <Viewport3D.Camera>
                <PerspectiveCamera
                    x:Name="camera"
                    FieldOfView="45"
                    LookDirection="-1,-1,-1"
                    Position="100,100,110"
                    UpDirection="0,0,1" />
            </Viewport3D.Camera>

            <!--  조명 설정  -->
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <Model3DGroup>
                        <AmbientLight Color="#404040" />
                        <DirectionalLight Direction="-1,-1,-1" Color="White" />
                        <DirectionalLight Direction="1,1,1" Color="#808080" />
                    </Model3DGroup>
                </ModelVisual3D.Content>
            </ModelVisual3D>

            <!--  좌표축 표시  -->
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <Model3DGroup x:Name="axisModelGroup" />
                </ModelVisual3D.Content>
            </ModelVisual3D>

            <!--  포인트 및 벡터 표시  -->
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <Model3DGroup x:Name="pointsModelGroup" />
                </ModelVisual3D.Content>
            </ModelVisual3D>
        </Viewport3D>
    </Grid>
</UserControl>
